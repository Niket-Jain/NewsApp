<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wind"
    android:orientation="vertical"
    tools:context=".weatherFile.WeatherActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/weatherToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentColor"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@color/colorPrimaryLight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="37 Â°C"
            android:textColor="@color/colorDark"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/img_weather"
            android:layout_width="135dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/cloudy" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="In India"
        android:textColor="@color/colorDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Weather"
        android:textColor="@color/colorDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Raipur"
        android:textColor="@color/colorDark"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:padding="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Wind"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/windTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="@drawable/border_table"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="Speed: 1 Deg: 1 "
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Pressure"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pressureTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_table"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="1012.75 hpa"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Geo Coord "
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/geoCoordTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_table"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="32.0, 81.0"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Humidity"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/humidityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_table"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="100 %"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Sunrise"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sunriseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_table"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="00:00"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Sunset"
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sunsetTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_table"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/colorDark"
                android:textSize="24dp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>
</LinearLayout>