<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:targetSandboxVersion="1"
    package="com.example.covid19">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/mainicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mainicon"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name=".currencyFile.CurrencyActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".scoreFile.ScoreActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".startupFile.StartupActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".weatherFile.WeatherActivity"
            android:usesCleartextTraffic="true"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".newsFile.NewsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".newsFile.NewsInDetails"/>
        <activity android:name=".stockFile.StockActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>